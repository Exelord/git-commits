{
  "name": "git-commits",
  "displayName": "Git Commits",
  "description": "Adds list of last commits in source control tab",
  "version": "3.0.0",
  "publisher": "Exelord",
  "repository": "https://github.com/Exelord/git-commits",
  "license": "MIT",
  "icon": "icon.png",
  "bugs": {
    "url": "https://github.com/Exelord/git-commits/issues"
  },
  "homepage": "https://github.com/Exelord/git-commits#readme",
  "engines": {
    "vscode": "^1.32.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "commit",
    "history",
    "revert",
    "diff",
    "commits",
    "list",
    "stash",
    "stashes",
    "atom",
    "vscode"
  ],
  "activationEvents": [
    "onView:gitCommits.commits",
    "onView:gitCommits.stashes"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "scm": [
        {
          "id": "gitCommits.commits",
          "name": "Commits",
          "when": "gitOpenRepositoryCount != 0"
        },
        {
          "id": "gitCommits.stashes",
          "name": "Stashes",
          "when": "gitOpenRepositoryCount != 0"
        }
      ]
    },
    "commands": [
      {
        "command": "git.undoCommit",
        "title": "Undo last commit",
        "icon": "$(discard)"
      },
      {
        "command": "gitCommits.copyCommitHash",
        "title": "Copy commit hash",
        "icon": "$(files)"
      },
      {
        "command": "gitCommits.diffChangeWithHead",
        "title": "Diff with current file",
        "icon": "$(diff)"
      },
      {
        "command": "gitCommits.copyFilePath",
        "title": "Copy file path",
        "icon": "$(files)"
      },
      {
        "command": "gitCommits.openFile",
        "title": "Open file",
        "icon": "$(go-to-file)"
      },
      {
        "command": "gitCommits.revertChange",
        "title": "Revert file",
        "icon": "$(discard)"
      },
      {
        "command": "gitCommits.stash",
        "title": "Stash",
        "icon": "$(archive)"
      },
      {
        "command": "gitCommits.stashIncludeUntracked",
        "title": "Stash (include untracked)",
        "icon": "$(inbox)"
      },
      {
        "command": "gitCommits.stashPopLatest",
        "title": "Pop latest",
        "icon": "$(discard)"
      },
      {
        "command": "gitCommits.stashApplyLatest",
        "title": "Apply latest",
        "icon": "$(output)"
      },
      {
        "command": "gitCommits.stashPop",
        "title": "Pop",
        "icon": "$(discard)"
      },
      {
        "command": "gitCommits.stashApply",
        "title": "Apply",
        "icon": "$(output)"
      },
      {
        "command": "gitCommits.stashDrop",
        "title": "Drop",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "git.undoCommit",
          "when": "view == gitCommits.commits",
          "group": "navigation"
        },
        {
          "command": "gitCommits.stashPopLatest",
          "when": "view == gitCommits.stashes",
          "group": "navigation@4"
        },
        {
          "command": "gitCommits.stashApplyLatest",
          "when": "view == gitCommits.stashes",
          "group": "navigation@3"
        },
        {
          "command": "gitCommits.stash",
          "when": "view == gitCommits.stashes",
          "group": "navigation@1"
        },
        {
          "command": "gitCommits.stashIncludeUntracked",
          "when": "view == gitCommits.stashes",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "gitCommits.copyCommitHash",
          "when": "view == gitCommits.commits && viewItem == commitNode",
          "group": "inline"
        },
        {
          "command": "gitCommits.diffChangeWithHead",
          "when": "view == gitCommits.commits && viewItem == changeNode",
          "group": "inline@1"
        },
        {
          "command": "gitCommits.openFile",
          "when": "view == gitCommits.commits || view == gitCommits.stashes && viewItem == changeNode",
          "group": "inline@2"
        },
        {
          "command": "gitCommits.revertChange",
          "when": "view == gitCommits.commits && viewItem == changeNode",
          "group": "inline@3"
        },
        {
          "command": "gitCommits.copyFilePath",
          "when": "view == gitCommits.commits || view == gitCommits.stashes && viewItem == changeNode",
          "group": "inline@4"
        },
        {
          "command": "gitCommits.stashApply",
          "when": "view == gitCommits.stashes && viewItem == commitNode",
          "group": "inline@1"
        },
        {
          "command": "gitCommits.stashPop",
          "when": "view == gitCommits.stashes && viewItem == commitNode",
          "group": "inline@2"
        },
        {
          "command": "gitCommits.stashDrop",
          "when": "view == gitCommits.stashes && viewItem == commitNode",
          "group": "inline@3"
        }
      ]
    }
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "release": "release-it"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.7.7",
    "release-it": "^12.6.3",
    "tslint": "^6.0.0",
    "typescript": "^3.8.3",
    "vsce": "^1.74.0",
    "vscode": "^1.1.36"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:release": "vsce publish"
    }
  },
  "dependencies": {
    "@formatjs/intl-utils": "^2.2.0",
    "crypto": "^1.0.1"
  }
}
